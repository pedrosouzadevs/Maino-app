<h2>Add a post</h2>
    <%= simple_form_for Post.new do |f| %>
      <%= f.input :title, label: "Write your post title here:" %>
      <%= f.input :content, label: "Write your post content here:" %>
      <%= f.submit class: "button-50" %>
    <% end %>

<%@posts.each do |post| %>
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            <div class="post-preview">
                <a href="<%= post_path(post)%>">
                    <h2 class="post-title"><%= post.title %></h2>
                    <h3 class="post-subtitle"><%= post.content.slice(0,100) +"..." %></h3>
                </a>
                <p class="post-meta">
                    Posted by <%= User.find(post.user_id).name %>
                    on <%= post.created_at.strftime("%B %d, %Y") %>
                </p>
            </div>
            <!-- Divider-->
            <hr class="my-4" />
            <!-- Pager-->
        </div>
    </div>
  </div>
<% end %>
  <div class="d-flex justify-content-center"><%= paginate @posts %></div>
