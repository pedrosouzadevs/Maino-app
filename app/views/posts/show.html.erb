<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            <div class="post-preview">
                <p>
                  <h2 class="post-title text-center"><%= @post.title %></h2>
                  <h3 class="post-subtitle text-center"><%= @post.content%></h3>
                </p>
                <p class="post-meta">
                  Posted by <%= User.find(@post.user_id).name  %>
                  on <%= @post.created_at.strftime("%B %d, %Y") %>
                </p>
            </div>
            <!-- Divider-->
            <hr class="my-4" />
            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="<%=posts_path%>">Get back to Posts â†’</a></div>
        </div>
    </div>
  </div>
